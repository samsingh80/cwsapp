<mvc:View controllerName="cwscreatestory.controller.createstories"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" showHeader = "false">
                    <content>

                        <FlexBox direction="Column">
                            <Image src="{imageModel>/path}/images/image001.png" class="header"/>
                        </FlexBox>
                        <f:SimpleForm id="SimpleForm" editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="6">
                            <f:content>
                                <Label text="Customer Name" labelFor="custname"  />
                                <Input id="custname" placeholder="Enter product" />
                                <Label text="Customer Logo" labelFor="fileUploader"  />
                                <u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete"/>
                                <Label text="Story Type" labelFor="storytype" />
                                <Select id="storytype" />
                                <Label text="Year" labelFor="year"  />
                                <Select id="year" />
                                <Label text="Quater" labelFor="quater"  />
                                <Select id="quater"/>
                                <Label text="Region" labelFor="region"  />
                                <Select id="region" />
                                <Label text="Market Classification" labelFor="acc"  />
                                <Select id="acc" />
                                <Label text= "Industry" labelFor="industry" />
                                <Select id="industry" />
                                <Label text="Industry Segment" labelFor="iseg"  />
                                <Input id="iseg" />
                                <Label text="About the customer" labelFor="about"  />
                                <TextArea value=" " rows="5"/>
                                <Label text="Company Website Link" labelFor="weblink"  />
                                <Input id="weblink"/>
                                <Label text= "Company HQ" labelFor="comphq"  />
                                <Input id="comphq" />
                                <Label text="Company Revenue" labelFor="rev"/>
                                <Input id="rev" />
                                <Label text="Number of Employees" labelFor="noofemp" />
                                <Input id="noofemp"/>
                                <Label text="Industry Account Executive" labelFor="exec" />
                                <Input id="exec"/>
                                <Label text= "Digital Pillars / Transformation Topics" labelFor="digtopics"/>
                                <Input id="digtopics"/>
                                <Label text="Deal Highlights" labelFor="deal" />
                                <TextArea id ="deal" value=" " rows="5" />
                                <Label text="SAP Solutions" labelFor="sapsol" />
                                <TextArea id ="sapsol" value=" " rows="5" />
                                <Label text="Customer Challenges Objectives" labelFor="obj" />
                                <TextArea id ="obj" value=" " rows="5" />
                                <Label text="Why the Customer choose SAP" labelFor="whysap" />
                                <TextArea id ="whysap" value=" " rows="5" />
                                <Label text="Engagement Highlights" labelFor="highlights"/>
                                <TextArea id ="highlights" value=" " rows="5" />
                                <Label text="Business Value" labelFor="value" />
                                <TextArea id ="value" value=" " rows="5" />
                                <Label text="Partners" labelFor="partner"/>
                                <TextArea id ="partner" value=" " rows="5" />
                                <Label text="Competitors" labelFor="Competitors"/>
                                <TextArea id ="Competitors" value=" " rows="5" />
                                <Label text="Customer Quotes" labelFor="custquotes" />
                                <TextArea id ="custquotes" value=" " rows="5" />
                                <Label text="Internal Assets" labelFor="asset" />
                                <TextArea id ="asset" value=" " rows="5" />
                                <Label text="Visibility" labelFor="visibility" />
                                <Input id="visibility"/>
                            </f:content>
                        </f:SimpleForm>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
